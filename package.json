{
  "name": "adu-builder",
  "version": "0.1.0",
  "description": "Intelligent ADU (Accessory Dwelling Unit) builder and cost calculator",
  "main": "src/api/index.js",
  "type": "module",
  "scripts": {
    "dev": "node --loader ts-node/esm src/api/index.ts",
    "build": "tsc",
    "start": "node dist/api/index.js",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "adu",
    "accessory-dwelling-unit",
    "cost-calculator",
    "construction",
    "real-estate"
  ],
  "author": "odanree",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
